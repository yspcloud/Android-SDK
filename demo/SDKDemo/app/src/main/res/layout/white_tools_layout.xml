<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical"
    android:id="@+id/float_parent">
    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_tools"
        android:background="@drawable/background_tool"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginBottom="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_black"
                android:src="@drawable/white_color_black_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_yellow"
                android:src="@drawable/white_color_yellow_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_orange"
                android:src="@drawable/white_color_orange_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_green"
                android:src="@drawable/white_color_green_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_blue"
                android:src="@drawable/white_color_blue_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_thin"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/white_thin_selector"/>
            <ImageView
                android:id="@+id/iv_regular"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/white_regular_selector"/>
            <ImageView
                android:id="@+id/iv_medium_bold"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/white_medium_selector"/>
            <ImageView
                android:id="@+id/iv_bold"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/white_bold_selector"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:src="@drawable/white_thin_selector"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:id="@+id/ll_clear_tools"
        android:visibility="gone"
        android:background="@drawable/background_tool"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_white_clear_all"
            android:text="@string/white_clear_all"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_white_clear_mine"
            android:text="@string/white_clear_mine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_white_clear_other"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:text="@string/white_clear_other"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_base_tools_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/background_float_none">
        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_mark_float"
                android:src="@drawable/share_mark_selector"
                android:layout_width="42dp"
                android:layout_height="42dp"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_base_tools"
            android:visibility="gone"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp">
            <ImageView
                android:id="@+id/iv_pen"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/white_pen_selector"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_earser"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/white_eraser_selector"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/white_clearall_selector"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/white_save_selecor"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>