<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/rlSearch"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/search_text_bg"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/ivSearch"
                android:src="@mipmap/icon_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:hint="@string/search_hint"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/search_edit"
                android:textSize="16sp"
                android:singleLine="true"
                android:imeOptions="actionGo"
                android:textColor="#000000"
                android:layout_toRightOf="@id/ivSearch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@null"
                />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView

        app:layout_constraintTop_toBottomOf="@id/con_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        tools:itemCount="5"
        tools:context=".contact.common.ContactCommonFragment"
        tools:listitem="@layout/fragment_contact_common" />
</androidx.constraintlayout.widget.ConstraintLayout>
